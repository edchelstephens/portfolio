# Coverage configuration file
# https://coverage.readthedocs.io/en/stable/config.html
# https://coverage.readthedocs.io/en/stable/config.html#syntax


# https://coverage.readthedocs.io/en/stable/source.html#execution
# https://coverage.readthedocs.io/en/stable/config.html#run
[run]

# https://coverage.readthedocs.io/en/stable/branch.html#how-to-measure-branch-coverage
branch = True

include =
    utils/*
    users/*
    blogs/*

omit =
    *migrations*
    *tests*
    *__init__*
    *manage*

[report]
exclude_lines =
    pragma no cover
